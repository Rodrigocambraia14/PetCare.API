{
  "swagger": "2.0",
  "info": {
    "title": "petCare API",
    "description": "API que disponibiliza rotas de consulta, criação e edição de usuários, pets e rotinas de alimentação, consumida pela aplicação petCareUI .",
    "version": "1.0"
  },
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/user/add": {
      "post": {
        "summary": "Cria um novo usuário na base de dados",
        "tags": [ "user" ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User object containing name, email, and password",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "O nome do usuário"
                },
                "email": {
                  "type": "string",
                  "description": "O e-mail do usuário"
                },
                "password": {
                  "type": "string",
                  "description": "A senha do usuário"
                }
              },
              "required": [ "name", "email", "password" ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created - Successful response.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request response - Alguns parâmetros não foram preenchidos corretamente!",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "summary": "Valida e realiza login do usuário cadastrado",
        "tags": [ "user" ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "E-mail e senha do usuário cadastrado",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "description": "O e-mail do usuário"
                },
                "password": {
                  "type": "string",
                  "description": "A senha do usuário"
                }
              },
              "required": [ "email", "password" ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response - Usuário autenticado com sucesso.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request response - Alguns parâmetros não foram preenchidos corretamente!",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/pet/add": {
      "post": {
        "summary": "Cria um novo pet na base de dados",
        "tags": [ "pet" ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "pet",
            "in": "body",
            "description": "Informações a respeito do animal como cor, idade,  gênero, nome, etc.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "O nome do animal"
                },
                "color": {
                  "type": "string",
                  "description": "A cor do animal"
                },
                "age": {
                  "type": "integer",
                  "description": "A idade do animal"
                },
                "gender": {
                  "type": "string",
                  "description": "O gênero do animal [M] ou [F]"
                },
                "user_id": {
                  "type": "string",
                  "description": "O Id do usuário autenticado (dono do animal)"
                }
              },
              "required": [ "name", "color", "age", "gender", "user_id" ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created - Successful response.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request response - Alguns parâmetros não foram preenchidos corretamente!",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/pet/list": {
      "get": {
        "summary": "Lista todos os pets do usuário",
        "tags": [ "pet" ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "description": "Id (chave primária) do usuário autenticado.",
            "required": true,
            "schema": {
              "type": "string",
              "description": "O Id do usuário"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/pet/update": {
      "put": {
        "summary": "Atualiza as informações de um pet",
        "description": "Esta rota permite atualizar as informações de um pet existente.",
        "tags": [ "pet" ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Dados do pet a serem atualizados",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Nome do pet"
                },
                "age": {
                  "type": "integer",
                  "description": "Idade do pet em anos"
                },
                "gender": {
                  "type": "string",
                  "description": "Gênero do pet (Macho/Fêmea)"
                },
                "color": {
                  "type": "string",
                  "description": "Cor do pet"
                },
                "user_id": {
                  "type": "integer",
                  "description": "ID do usuário proprietário do pet"
                },
                "pet_id": {
                  "type": "integer",
                  "description": "ID único do pet a ser atualizado"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Mensagem de sucesso"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "Descrição do erro"
                }
              }
            }
          }
        }
      }
    },
    "/pet/delete": {
      "delete": {
        "summary": "Remove um pet da base de dados",
        "produces": [ "application/json" ],
        "tags": [ "pet" ],
        "parameters": [
          {
            "name": "pet_id",
            "in": "body",
            "description": "O ID do pet a ser removido",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "pet_id": {
                  "type": "string",
                  "description": "O ID do pet"
                }
              },
              "required": [ "pet_id" ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response - O pet foi removido com sucesso.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request response - Alguns parâmetros não foram preenchidos corretamente!",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/vaccine_calendar/add": {
      "post": {
        "summary": "Adiciona uma nova data de vacina ao calendário",
        "tags": [ "vaccine_calendar" ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Dados da nova vacina a ser adicionada",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "description": "A data da vacina"
                },
                "description": {
                  "type": "string",
                  "description": "Descrição da vacina"
                },
                "user_id": {
                  "type": "string",
                  "description": "ID do usuário proprietário"
                }
              },
              "required": [ "date", "description", "user_id" ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created - Successful response.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request response - Alguns parâmetros não foram preenchidos corretamente!",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/vaccine_calendar/update": {
      "put": {
        "summary": "Atualiza uma data de vacina existente no calendário",
        "tags": [ "vaccine_calendar" ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Dados da vacina a serem atualizados",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "description": "A data da vacina"
                },
                "description": {
                  "type": "string",
                  "description": "Descrição da vacina"
                },
                "user_id": {
                  "type": "string",
                  "description": "ID do usuário proprietário"
                },
                "vaccine_calendar_id": {
                  "type": "string",
                  "description": "ID da data selecionada"
                }
              },
              "required": [ "date", "description", "user_id", "vaccine_calendar_id" ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request response - Alguns parâmetros não foram preenchidos corretamente!",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "pet",
      "description": "Operações relacionadas a pets"
    },
    {
      "name": "user",
      "description": "Operações relacionadas a usuários"
    },
    {
      "name": "vaccine_calendar",
      "description": "Operações relacionadas ao calendario de vacinação"
    }
  ],
  "components": {
    "schemas": {
      "FoodRoutineNotificationDTO": {
        "type": "object",
        "properties": {
          "notification_id": {
            "type": "string"
          },
          "user_id": {
            "type": "string"
          },
          "pet_id": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "time": {
            "type": "string"
          }
        }
      },
      "AddFoodRoutineRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "portions": {
            "type": "integer"
          },
          "pet_id": {
            "type": "string"
          },
          "portion_details": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "grams": {
                  "type": "integer"
                },
                "feed_time": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
